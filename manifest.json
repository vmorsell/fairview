{
  "name": "Fairview - Unbiased Hiring on LinkedIn",
  "short_name": "Fairview",
  "description": "Remove unconscious bias from LinkedIn sourcing by automatically blurring profile pictures, names, and premium badges - so you focus on skills, not stereotypes.",
  "version": "0.2.0",
  "manifest_version": 3,
  "permissions": ["storage", "scripting"],
  "host_permissions": ["https://www.linkedin.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/*"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
